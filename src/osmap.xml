<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.4" method="upgrade">
    <name>COM_OSMAP</name>
    <creationDate>June 15 2016</creationDate>
    <copyright>Copyright (C) 2016 Open Source Training, LLC. All rights reserved. / Forked from XMap - Guillermo Vargas - guille@vargas.co.cr</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Alledia</author>
    <authorEmail>support@alledia.com</authorEmail>
    <authorUrl>http://www.alledia.com</authorUrl>
    <version>4.0.0b5</version>
    <variant>FREE</variant>
    <description>COM_OSMAP_DESCRIPTION</description>

    <scriptfile>script.installer.php</scriptfile>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/install.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/mysql/uninstall.utf8.sql</file>
        </sql>
    </uninstall>

    <update>
        <schemas>
            <schemapath type="mysql">sql/mysql/updates</schemapath>
        </schemas>
    </update>

    <files folder="site">
        <filename>osmap.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>helpers</folder>
        <folder>language</folder>
        <folder>views</folder>
    </files>

    <media destination="com_osmap" folder="media">
        <folder>css</folder>
        <folder>js</folder>
        <folder>images</folder>
        <folder>fonts</folder>
    </media>

    <administration>
        <menu>COM_OSMAP_TITLE</menu>
        <files folder="admin">
            <filename>osmap.php</filename>
            <filename>include.php</filename>
            <filename>controller.php</filename>
            <filename>config.xml</filename>
            <folder>sql</folder>
            <folder>controllers</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>models</folder>
            <folder>library</folder>
            <folder>form</folder>
            <folder>language</folder>
            <folder>helpers</folder>
        </files>
    </administration>

    <updateservers>
        <server type="extension" priority="1" name="OSMap"><![CDATA[http://deploy.ostraining.com/client/update/free/stable/com_osmap]]></server>
    </updateservers>

    <alledia>
        <element>osmap</element>
        <namespace>OSMap</namespace>
        <license>free</license>
        <targetplatform>3.*</targetplatform>
        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework">AllediaFramework</extension>

            <extension
                type="plugin"
                group="system"
                element="ossystem"
                publish="true"
                ordering="first">OSSystem</extension>

            <extension
                type="plugin"
                group="osmap"
                publish="true"
                element="joomla">plg_osmap_joomla</extension>
        </relatedExtensions>

        <include>AllediaFreeDefaultFiles</include>

        <obsolete>
            <extension
                type="plugin"
                group="osmap"
                element="com_content">plg_osmap_com_content</extension>

            <extension
                type="plugin"
                group="xmap"
                element="com_content">plg_xmap_com_content</extension>
        </obsolete>
    </alledia>
</extension>
